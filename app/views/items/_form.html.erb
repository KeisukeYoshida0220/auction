<%= form_for @item do |f| %>

  <p>
    商品名 : <%= f.text_field :name %>
    </p>

  <p>
    商品詳細 : <%= f.text_area :description%>
  </p>

  <p>
    価格 : <%= f.text_field :price%>
  </p>

  <p>
    売主<%= f.text_field :seller_id%>
  </p>

  <p>
    問い合わせ<%= f.text_field :email%>
  </p>

  <p>
    商品画像<%= f.text_field :image_url%>
  </p>

   <input type="submit" name="commit" value="登録" />

<% end %>
